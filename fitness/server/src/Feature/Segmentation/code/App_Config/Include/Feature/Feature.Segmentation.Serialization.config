<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Feature.Segmentation" description="Includes items required for Segmentation by Habitat Home Fitness">
          <targetDataStore physicalRootPath="$(fitnessSourceFolder)\$(layer)\$(module)\serialization" useDataCache="false" singleInstance="true" />
          <predicate>
            <include name="Rules" database="master" path="/sitecore/system/Settings/Rules/Definitions/Elements/Habitat Fitness Segmentation" />
            <include name="Segments" database="master" path="/sitecore/system/Marketing Control Panel/Segments" />
            <include name="Lists" database="master" path="/sitecore/system/Marketing Control Panel/Contact Lists" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>