<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
  <sitecore unicorn:require="Enabled">
    <unicorn>
      <configurations>
        <configuration name="Project.MarketingDefinitions" description="Includes marketing definition items used by Lighthouse Fitness">
          <targetDataStore physicalRootPath="$(fitnessSourceFolder)\Project\AppItems\serialization\MarketingDefinitions" />
          <predicate>
            <include name="Campaigns" database="master" path="/sitecore/system/Marketing Control Panel/Campaigns/Lighthouse Fitness" />
            <include name="Goals" database="master" path="/sitecore/system/Marketing Control Panel/Goals/Lighthouse Fitness" />
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>